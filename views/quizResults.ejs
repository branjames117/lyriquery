<%- include('partials/header') %>

<h2>Quiz Results</h2>

<h4>
  You correctly identified <%= points %> <% if (points === 1) { %>lyric<% } else
  { %>lyrics<% }%> out of <%= totalQuestions %>.
</h4>

<table class="table table-striped table-hover">
  <% questions.forEach((question, idx) => { %>
  <thead class="thead-light">
    <tr>
      <th colspan="3"><%= idx + 1 %>. <%= question %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Your Guess</td>
      <td>Correct Answer</td>
      <td></td>
    </tr>
    <tr>
      <td><%= guesses[idx] %></td>
      <td><%= answers[idx] %></td>
      <td>
        <% if (pointsArray[idx] === 1) { %>
        <i class="fas fa-check correct-answer"></i>
        <% } else { %>
        <i class="fas fa-times incorrect-answer"></i>
        <% } %>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

<h3 class="mt-3">Score: <%= score %>%</h3>

<% if (score == 100) { %>
<h3 class="mt-3">Perfect score! You're amazing!</h3>
<% } else if (score >= 75 && score < 100) { %>
<h3 class="mt-3">That's awesome!</h3>
<% } else if (score >= 50 && score < 75) { %>
<h3 class="mt-3">That's pretty good!</h3>
<% } else if (score >= 25 && score < 50) { %>
<h3 class="mt-3">You can do better! Try again!</h3>
<% } else { %>
<h3 class="mt-3">Did you call yourself a fan?</h3>
<% } %> <%- include('partials/quizform') %> <%- include('partials/footer') %>
